extends template
block title
    title Главная
block content
    //Шапка начало для главной страницы
    header.head
        //Навигация на главной
        .head-topline.head-topline_second
            .head-topline__wrapper
                a(href='/' class='logo')
                    img(src='img/logo.png' alt='123')
                nav.nav
                    ul.nav__list
                        li.nav__item.active
                            a(href='#') Продукты
                        li.nav__item
                            a(href='#') Бизнес
                        li.nav__item
                            a(href='#') Здоровье
                        li.nav__item
                            a(href='#') Обучение
                        li.nav__item
                            a(href='#') О компании
                        li.nav__item.nav__item_mobile
                            a(href='#') Присоедениться
                .head__join
                    a(href='#') Присоедениться
                <a href="#" class="toggle-mnu"><span></span></a>


        // навигация на главнойй конец
        //Видео в шапке



        .page__wrapper
            aside.aside
                .aside__mobile План работы
                nav.aside__nav
                    ul
                        li
                            a(href="#") План работы
                        li.active
                            a(href="#") Награждение
                        li
                            a(href="#") Мероприятия
                        li
                            a(href="#") Подать заявку
            .page__content
                .page__shop.page__flex
                    -var $k = 12;
                    -for ($i = 1; $i<=$k; $i++)
                        .shop
                            .shop__wrap
                                img(src='img/shop1.png' alt='123')
                                h3.shop__title Трансфер Фактор Плюс
                                .shop__price 4 290 Р
                                a(href='#').shop__text
                                    p Продукт иммунной системы, который был показан в исследовании in vitro для повышения активности естественных киллерных клеток до 283% *
                            .shop__bottom
                                a(href='#').shop__button.shop__button_more Описание
                                a(href='#' data-shop='#').shop__button.shop__button_buy Купить